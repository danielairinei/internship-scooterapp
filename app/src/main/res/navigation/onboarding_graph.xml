<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.internship.move.feature.onboarding.OnboardingFragment"
        android:label="OnboardingFragment" >
        <action
            android:id="@+id/action_onboardingFragment_to_authentification_graph"
            app:destination="@id/authentification_graph"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_onboardingFragment_to_helpFragment"
            app:destination="@id/helpFragment" />
    </fragment>
    <include app:graph="@navigation/authentification_graph" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.internship.move.feature.help.HelpFragment"
        android:label="fragment_help"
        tools:layout="@layout/fragment_help" >
        <argument
            android:name="argText"
            app:argType="string"
            android:defaultValue=""/>
        <action
            android:id="@+id/action_helpFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
</navigation>