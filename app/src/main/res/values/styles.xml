<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_primary_button_enabled</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:outlineProvider">none</item>
        <item name="cornerRadius">@dimen/onboarding_btn_corner_radius</item>
        <item name="fontFamily">@font/bai_jamjuree_bold</item>
        <item name="android:textSize">@dimen/button1_text_size</item>
        <item name="android:height">@dimen/onboarding_btn_height</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="fontFamily">@font/bai_jamjuree_regular</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="Heading1" parent="TextAppearance">
        <item name="fontFamily">@font/bai_jamjuree_bold</item>
        <item name="android:textSize">@dimen/heading1_text_size</item>
    </style>

    <style name="Heading2" parent="TextAppearance">
        <item name="fontFamily">@font/bai_jamjuree_regular</item>
        <item name="android:textSize">@dimen/heading2_text_size</item>
    </style>

    <style name="Heading2SB" parent="TextAppearance">
        <item name="fontFamily">@font/bai_jamjuree_semi_bold</item>
        <item name="android:textSize">@dimen/heading2_text_size</item>
    </style>

    <style name="Button1" parent="TextAppearance">
        <item name="fontFamily">@font/bai_jamjuree_bold</item>
        <item name="android:textSize">@dimen/button1_text_size</item>
    </style>

    <style name="SmallText" parent="TextAppearance">
        <item name="fontFamily">@font/bai_jamjuree_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="MediumText" parent="TextAppearance">
        <item name="fontFamily">@font/bai_jamjuree_medium</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="PrimaryTF" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/bai_jamjuree_regular</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColorHint">@color/authentication_second_text_color</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:hint">This is a hint</item>
        <item name="hintTextColor">@color/authentication_second_text_color</item>
        <item name="endIconMode">custom</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/input_layout_box_stroke_color</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="android:layout_marginTop">@dimen/text_field_margin_top</item>
        <item name="endIconTint">@null</item>
    </style>

    <style name="PrimaryET" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/authentication_second_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="fontFamily">@font/bai_jamjuree_regular</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">text|textNoSuggestions</item>
    </style>

    <style name="Topbar" parent="Heading1">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">@dimen/heading3_text_size</item>
    </style>

    <style name="UnlockButton" parent="PrimaryButton">
        <item name="android:background">@drawable/bg_unlock_button</item>
        <item name="android:layout_width">@dimen/scooter_unlock_button_size</item>
        <item name="android:layout_height">@dimen/scooter_unlock_button_size</item>
        <item name="android:fontFamily">@font/bai_jamjuree_regular</item>
    </style>

    <style name="AccountTIL" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/bai_jamjuree_regular</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColorHint">@color/pearl_purple</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:hint">This is a hint</item>
        <item name="hintTextColor">@color/pearl_purple</item>
        <item name="endIconMode">custom</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/pearl_purple</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="android:layout_marginTop">@dimen/text_field_margin_top</item>
        <item name="endIconTint">@null</item>
    </style>
</resources>